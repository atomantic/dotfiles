# Custom zsh settings

# -------------------------------------------------------------------
# Editors
# -------------------------------------------------------------------

# Emacs - scimax mode
# The 'emacsh' starts emacs here i.e. active directory
export emacs="emacs -q -l $MYREPOS/scimax/init.el"
export emacsh="emacs ."

# Rstudio
# The 'rstudioh' starts rstudio here i.e. active directory
export rstudio="open -a /Applications/RStudio.app"
export rstudioh="open -a /Applications/RStudio.app ."

# -------------------------------------------------------------------
# Source: https://gist.github.com/zanshin/1142739
# -------------------------------------------------------------------

# -------------------------------------------------------------------
# some alias settings, just for fun
# -------------------------------------------------------------------
alias 'dus=du -sckx * | sort -nr'
alias 'ttop=top -ocpu -R -F -s 2 -n30'
alias lh='ls -a | egrep "^\."'

# -------------------------------------------------------------------
# make some commands (potentially) less destructive
# -------------------------------------------------------------------
alias 'rmf=rm -rf'
alias 'rm=rm -i'

# leverage an alias from the ~/.gitconfig
alias gh='git hist'

# -------------------------------------------------------------------
# Oddball stuff
# -------------------------------------------------------------------
# necessary to make rake work inside of zsh
alias rake="noglob rake"

# sort files in current directory by the number of words they contain
alias 'wordy=wc -w * | sort | tail -n10'
alias 'filecount=ls -aRF | wc -l'

# -------------------------------------------------------------------
# Source: https://gist.githubusercontent.com/zph/4965016/raw/7c395fd4eceab03561bf2c3c0c5d38496a60a21a/aliases.zsh
# -------------------------------------------------------------------

alias dstamp='date +%Y-%m-%d'
alias less="less -R"
alias q='exit'
alias md='mkdir -pv' # Make mkdir recursive
alias cdd='cd - '                     # goto last dir cd'ed from
alias df='df -kH'

#cd by .. or ... or ... or mv file ..../.
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# Because swapping to fg, bg, etc should be seamless
alias j="jobs"
alias f="fg"
alias b='bg'
alias cp='cp -iv'
alias mv='mv -iv'
alias cls="clear"
alias grep='grep -i --color=auto'
alias egrep='egrep --color=auto'

# Mac Specific
alias h='history'
alias l='less'

alias wget="wget -c"
alias histg="history | grep"
alias top="htop"
alias myip="curl http://ipecho.net/plain; echo"

# Install hub and alias it to git
alias hub=git